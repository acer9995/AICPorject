<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--  first line-->
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/route_linear1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">"
        
		 <RadioGroup
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" 
		        android:id="@+id/route_group"		        
		        android:gravity="center"
		        android:padding="1dp"
		        android:background="@color/ivory"
		        >
		        <RadioButton
		            android:id="@+id/route_radioButton1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/top_item_selector"
		            android:checked="true"
		            android:button="@null"
		            android:text="@string/plancheck_name"
		            android:textSize="@dimen/top_item_text_size"/>		
		        <RadioButton
		            android:id="@+id/route_radioButton2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		           
		            android:background="@drawable/top_item_selector"
		            android:button="@null"
		            android:text="@string/tem_spec"
		            android:textSize="@dimen/top_item_text_size"
		           />	
		            <RadioButton
		            android:id="@+id/route_radioButton3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		           
		            android:background="@drawable/top_item_selector"
		            android:button="@null"
		            android:text="@string/tem_check"
		            android:textSize="@dimen/top_item_text_size"
		           />	
		       
		</RadioGroup> 
		
		  </LinearLayout>
		  
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/red_line1"
            android:background="@drawable/red_line"
            android:orientation="horizontal"
            android:layout_below="@+id/route_linear1">
        </LinearLayout>
 <!--  seceond line-->
    <ListView 
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red_line1"      
       />

        

</RelativeLayout>
