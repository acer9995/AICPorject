<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout 
    android:id="@+id/bluetooth_l"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="9">
  <TextView 
      android:id="@+id/bt_lable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/bluetooth"
      android:layout_weight="1"/>
  <EditText 
      android:id="@+id/bt_content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="Bluetooth content"
      android:layout_weight="6"
      android:singleLine="true"/>
  <Button 
      android:id="@+id/bt_send"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="发送内容"
      android:layout_weight="2"/>
  </LinearLayout>
    <!--  first line-->
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip" android:id="@+id/onelinelayout">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/link_statusView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="link" 
            />
         <Switch
                android:id="@+id/bt_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/red_line1"
            android:background="@drawable/red_line"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            >
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/bluetooth_list"
        android:layout_width="fill_parent"
        android:layout_height="117dp" >
</ListView>
    <LinearLayout 
    android:id="@+id/wifi_l"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="9"
    >
  <TextView 
      android:id="@+id/wifi_lable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/wifi"
      android:layout_weight="1"/>
  <EditText 
      android:id="@+id/wifi_content"
      android:layout_width="160dp"
      android:layout_height="wrap_content"
      android:hint="Wifi content"
      android:layout_weight="6"
       android:singleLine="true"/>
  <Button 
      android:id="@+id/wifi_send"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="发送内容"
      android:layout_weight="2"
      />
  </LinearLayout>
    <!--  first line-->
    <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dip" 
        android:id="@+id/twolinelayout">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/link_statusView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="link" 
            />
         <Switch
                android:id="@+id/wifi_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/red_line2"
            android:background="@drawable/red_line"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            >
        </LinearLayout>
    </RelativeLayout>
    <ListView 
        android:id="@+id/wifi_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ></ListView>

</LinearLayout>
